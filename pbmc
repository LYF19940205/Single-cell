library(dplyr)
library(Seurat)
library(ggplot2)
library(tidyverse)
library(ggsci)
library(cowplot)
library(DoubletFinder)
library(harmony)
library(RColorBrewer)
WT <- Read10X(data.dir = "D:/SCRNA")
WT <- CreateSeuratObject(counts = WT, project = "WT", min.cells = 3, min.features = 200)
WT[["percent.mt"]] <- PercentageFeatureSet(WT , pattern = "^MT-") 
VlnPlot(WT, features = c("nFeature_RNA", "nCount_RNA", "percent.mt"))
WT <-subset(WT, nFeature_RNA>1800 & nFeature_RNA<10000 & nCount_RNA>2800 & nCount_RNA<30000)


pbmc <- NormalizeData(WT, normalization.method = "LogNormalize", scale.factor = 10000)
pbmc <- FindVariableFeatures(pbmc, selection.method = "vst", nfeatures = 2000)
top10 <- head(VariableFeatures(pbmc), 20)
plot1 <- VariableFeaturePlot(pbmc)
plot2 <- LabelPoints(plot = plot1, points = top10, repel = TRUE, size=2.5)
plot1 + plot2 
pbmc <- NormalizeData(pbmc)
all.genes <- rownames(pbmc)
pbmc <- ScaleData(pbmc, features = all.genes)
pbmc <- RunPCA(pbmc, features = VariableFeatures(object = pbmc))
print(pbmc[["pca"]], dims = 1:5, nfeatures = 5)
VizDimLoadings(object = pbmc, dims = 1:2, reduction = "pca",nfeatures = 20)
DimPlot(pbmc, reduction = "pca")
DimHeatmap(pbmc, dims = 1:10, cells = 500, balanced = TRUE, nfeatures = 30,ncol = 2)
pbmc <- JackStraw(object = pbmc,num.replicate = 100)
pbmc <- ScoreJackStraw(object = pbmc, dims = 1:20)
JackStrawPlot(object = pbmc, dim = 1:20, reduction = "pca")
ElbowPlot(pbmc,reduction = "pca")
pbmc <- FindNeighbors(pbmc, dims = 1:20)
pbmc <- FindClusters(pbmc, resolution = 0.5)
